{
  "manifest_version": 3,
  "name": "Zync Control",
  "version": "0.1",
  "permissions": ["storage", "scripting", "tabs"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
